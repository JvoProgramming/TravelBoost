{
  "manifest_version": 3,
  "name": "TravelBoost",
  "version": "1.0",
  "description": "A Chrome extension for travel enthusiasts looking for the best deals",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.kayak.com/*",
        "*://*.expedia.com/*",
        "*://*.booking.com/*",
        "*://*.hotels.com/*",
        "*://*.google.com/flights/*",
        "*://*.enterprise.com/*",
        "*://*.hertz.com/*"
      ],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 